<?xml version="1.0" encoding="UTF-8"?>
<catalog>
    <widget>
        <name><%=widget_name%></name>
        <contextItemName>[BBHOST]</contextItemName>
        <extendedItemName>widget-launchpad-base</extendedItemName>
        <properties>
            <property label="Title" name="title" viewHint="text-input,user,designModeOnly">
                <value type="string"><%=widget_title%></value>
            </property>
            <property name="src">
                <value type="string">$(itemRoot)/index.html</value>
            </property>
            <property name="thumbnailUrl">
                <value type="string">$(itemRoot)/icon.png</value>
            </property>
            <property name="TemplateName">
                <value type="string">Standard_Widget</value>
            </property>
            <property label="Widget Chrome" name="widgetChrome" viewHint="select-one,user,designModeOnly">
                <value type="string">$(contextRoot)/static/features/[BBHOST]/chromes/blank/chrome-blank.html</value>
            </property>
            <!-- mobile widgets-specific properties -->
            <property label="Preload Widget" name="preload" viewHint="checkbox,user,designModeOnly">
                <value type="string">false</value>
            </property>
            <property label="Retain Widget" name="retain" viewHint="checkbox,user,designModeOnly">
                <value type="string">false</value>
            </property>
        </properties>
        <tags>
            <tag type="regular">launchpad</tag>
            <tag type="section">custom</tag>
        </tags>
    </widget>
</catalog>
