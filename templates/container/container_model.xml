<container>
    <name><%=container_name%></name>
    <contextItemName>[BBHOST]</contextItemName>
    <properties>
        <property name="TemplateName">
            <value type="string"><%=template_name%></value>
        </property>
        <property name="viewNamespace">
            <value type="string"><%=bundle_name%></value>
        </property>
        <property name="title">
            <value type="string"><%=container_title%></value>
        </property>
        <property name="config">
            <value type="string">$(contextRoot)/static/<%=bundle_name%>/containers/<%=container_name%>/config.xml</value>
        </property>
        <property name="csr">
            <value type="boolean">false</value>
        </property>
        <property name="thumbnailUrl">
            <value type="string">$(contextRoot)/static/<%=bundle_name%>/containers/<%=container_name%>/media/icon.png</value>
        </property>
    </properties>
    <tags>
        <tag type="regular">layout</tag>
        <tag type="section">layouts</tag>
    </tags>
</container>